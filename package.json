{
  "name": "socket",
  "version": "0.0.1",
  "description": "Socket Template",
  "main": "dist/server.js",
  "repository": "git@github.com:houseoftypescript/socket.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 16",
    "npm": ">= 8",
    "yarn": "1"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "dev": "kill-port 8080 && concurrently \"nodemon\" \"nodemon -x yarn docs\"",
    "docs": "yarn docs:swagger:json && yarn docs:swagger:yaml && yarn docs:postman",
    "docs:postman": "node ./scripts/postman",
    "docs:swagger:json": "tsoa spec-and-routes",
    "docs:swagger:yaml": "json2yaml ./docs/swagger/swagger.json > ./docs/swagger/swagger.yaml",
    "lint": "eslint . --fix --ext .ts",
    "start": "node .",
    "test": "jest",
    "watch": "webpack --watch",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "pino": "8.11.0",
    "pino-pretty": "9.4.0",
    "socket.io": "4.6.1",
    "tsoa": "5.1.1",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.13",
    "@types/csurf": "1.11.2",
    "@types/express": "4.17.17",
    "@types/http-errors": "2.0.1",
    "@types/jest": "29.4.0",
    "@types/node": "18.14.6",
    "@types/uuid": "9.0.1",
    "@types/webpack-node-externals": "3.0.0",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "@webpack-cli/generators": "3.0.1",
    "concurrently": "7.6.0",
    "eslint": "8.35.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "kill-port": "2.0.1",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "rimraf": "4.4.0",
    "swagger2-to-postmanv2": "2.1.0",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-node-externals": "3.0.0"
  }
}
